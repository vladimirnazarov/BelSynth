<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/background_color"

    tools:ignore="ContentDescription"
    tools:context=".ui.chat.ChatActivity"

    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/main_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_back"
            android:background="@drawable/ripple_rounded"

            android:padding="8dp"

            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/main_toolbar_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_volume_on"
            android:background="@drawable/ripple_rounded"

            android:padding="8dp"

            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar_speaker_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_toolbar_audio"
            app:layout_constraintStart_toEndOf="@id/main_toolbar_back"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/main_toolbar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/main_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="17sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"

                android:layout_marginStart="8dp"

                app:layout_constraintStart_toEndOf="@id/main_toolbar_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/main_horizontal_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toTopOf="@id/main_record_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_chat_msg_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:background="@color/chat_input_holder_background"

        android:elevation="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/main_chat_msg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_send"
            android:background="@drawable/ripple_rounded"

            android:padding="8dp"

            android:layout_marginEnd="16dp"
            android:layout_marginVertical="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/main_chat_msg_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@drawable/background_chat_edit_text"
            android:textColorLink="@color/chat_icon_color"
            android:textColorHighlight="@color/chat_highlight_color"

            android:textColor="@color/msg_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"

            android:hint="@string/enter_message"
            android:textColorHint="@color/chat_input_hint"
            android:colorControlActivated="@color/chat_icon_color"

            android:maxLines="3"
            android:inputType="textMultiLine|textAutoCorrect"
            android:imeOptions="actionSend"

            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"

            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_chat_msg_send"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/background_main_bottom_bar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/main_bottom_horizontal_separator"
            android:layout_width="1dp"
            android:layout_height="1dp"

            android:layout_marginBottom="16dp"
            
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/main_bottom_vertical_separator"
            android:layout_width="1dp"
            android:layout_height="1dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_keyboard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/ripple_rounded_record"

            android:clickable="true"
            android:focusable="true"

            android:layout_marginBottom="24dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_bottom_vertical_separator"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/main_keyboard_button_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_keyboard"

                android:layout_margin="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_duration_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="gone"

            app:layout_constraintStart_toEndOf="@id/main_bottom_vertical_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_keyboard_button"
            app:layout_constraintBottom_toBottomOf="@id/main_keyboard_button">
            
            <ImageView
                android:id="@+id/main_duration_icon"
                android:layout_width="6dp"
                android:layout_height="6dp"

                android:background="@drawable/background_record_beep"

                android:layout_marginStart="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/main_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/chat_record_plug"
                android:textSize="16sp"
                android:textColor="@color/main_bottom_bar_icon_color"
                android:fontFamily="@font/roboto"

                android:layout_marginHorizontal="4dp"

                app:layout_constraintStart_toEndOf="@id/main_duration_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/main_wave_replacement"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:visibility="visible"

            app:layout_constraintBottom_toTopOf="@id/main_bottom_horizontal_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_wave_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:visibility="gone"

            android:paddingVertical="16dp"
            android:paddingHorizontal="48dp"

            app:layout_constraintBottom_toTopOf="@id/main_bottom_horizontal_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/main_wave_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/record_wave"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="@id/main_wave_layout"
            app:layout_constraintBottom_toBottomOf="@id/main_wave_layout"
            app:layout_constraintStart_toStartOf="@id/main_wave_layout"
            app:layout_constraintEnd_toEndOf="@id/main_wave_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_chat_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintBottom_toTopOf="@id/main_bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_progress_holder"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/background_chat_loader"

        android:visibility="gone"

        android:layout_marginBottom="24dp"

        app:layout_constraintBottom_toTopOf="@id/main_bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/main_progress_dot_1"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            android:layout_marginTop="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/main_progress_dot_3"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/main_progress_dot_2"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            app:layout_constraintTop_toBottomOf="@id/main_progress_dot_1"
            app:layout_constraintEnd_toStartOf="@id/main_progress_dot_3"/>

        <ImageView
            android:id="@+id/main_progress_dot_5"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            android:layout_marginBottom="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/main_progress_dot_4"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            app:layout_constraintBottom_toTopOf="@id/main_progress_dot_5"
            app:layout_constraintEnd_toStartOf="@id/main_progress_dot_3"/>

        <ImageView
            android:id="@+id/main_progress_dot_7"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            android:layout_marginStart="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/main_progress_dot_6"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            app:layout_constraintBottom_toTopOf="@id/main_progress_dot_5"
            app:layout_constraintStart_toEndOf="@id/main_progress_dot_7"/>

        <ImageView
            android:id="@+id/main_progress_dot_8"
            android:layout_width="5dp"
            android:layout_height="5dp"

            android:background="@drawable/background_recognition_dot"

            app:layout_constraintTop_toBottomOf="@id/main_progress_dot_1"
            app:layout_constraintStart_toEndOf="@id/main_progress_dot_7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background_main_record_1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/main_record_ripple"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/ripple_rounded_record"

            app:layout_constraintTop_toTopOf="@id/main_record_ring"
            app:layout_constraintStart_toStartOf="@id/main_record_ring"
            app:layout_constraintEnd_toEndOf="@id/main_record_ring"
            app:layout_constraintBottom_toBottomOf="@id/main_record_ring"/>

        <ImageView
            android:id="@+id/main_record_ring"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/background_main_record_2"

            android:layout_margin="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/main_record_image"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_mic_on"

            android:layout_margin="24dp"

            app:layout_constraintTop_toTopOf="@id/main_record_ring"
            app:layout_constraintStart_toStartOf="@id/main_record_ring"
            app:layout_constraintEnd_toEndOf="@id/main_record_ring"
            app:layout_constraintBottom_toBottomOf="@id/main_record_ring"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>